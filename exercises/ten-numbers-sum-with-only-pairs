package main;
		
	import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int sum = 0;
		
		for (int i = 1; i < 11; i++) {
			System.out.println("Type the " + i + "ยบ number:");
			int num = in.nextInt();
			
			if (num % 2 == 0) {
				sum += num;
			}
		}
		
		System.out.println(sum);
	}
}
